<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Application Theme for Dark Mode -->
    <style name="Base.Theme.App_Dizertatie" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryVariant">@color/darkPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Background Colors -->
        <item name="android:statusBarColor">@color/darkPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/darkPrimaryVariant</item>
        <item name="android:windowBackground">@color/darkPrimary</item>

        <!-- Toolbar Customization -->
        <item name="actionBarStyle">@style/ToolbarStyle</item>
        <item name="android:actionBarStyle">@style/ToolbarStyle</item>
    </style>

    <!-- Application Theme -->
    <style name="Theme.App_Dizertatie" parent="Base.Theme.App_Dizertatie" />

    <!-- Toolbar Styling -->
    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/darkPrimary</item>
        <item name="titleTextColor">@color/colorOnPrimary</item>
        <item name="subtitleTextColor">@color/colorOnPrimary</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">56dp</item> <!-- Standard toolbar height -->
        <item name="android:layout_margin">0dp</item>

    </style>

</resources>
